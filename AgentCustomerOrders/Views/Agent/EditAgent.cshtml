@{
    ViewData["Title"] = "Edit Agent";
}
@{

    @model AgentCustomerOrders.Models.AgentDetails

    <h1>Edit Agent  @Model.agent.AgentCode</h1>

    <div class="card" style="width: 30rem;">
        <img src="/agent.png" class="card-img-top" alt="..." max-width="150">
        <form method="post" action="editAgent">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h3>Current Agent Name: @Model.agent.AgentName</h3>
                    <input name="AgentName" placeholder="Enter new agent name..." />
                </li>
                <li class="list-group-item">
                    <h3>Current Name:  @Model.agent.WorkingArea</h3>
                    <input name="WorkingArea" placeholder="Enter new working area..." />
                </li>
                <li class="list-group-item">
                    <h3>Current Commission @Model.agent.Commission</h3>
                    <input name="Commission" placeholder="Enter new commission amount..." />
                </li>
                <li class="list-group-item">
                    <h3>Current Phone Number: @Model.agent.PhoneNo</h3>
                    <input name="PhoneNo" placeholder="Enter new phone number..." />
                </li>
                <li class="list-group-item">
                    <button class="btn btn-info" type="submit">Save Changes</button>
                </li>

            </ul>
        </form>
    </div>


}