@{
    ViewData["Title"] = "Agent List";
}

@model AgentCustomerOrders.Models.AgentViewModel

<div>
    <div class="row">
        <div class="col">
            <h2 class="display-4">Agent List</h2>
        </div>
        <div class="col">
            <a href="/Agent/addAgent" class="btn btn-block btn-outline-info">
                <h2>Add a new Agent</h2>
            </a>
        </div>      
    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Working Area</th>
                <th>Phone Number</th>
                <th>Commission</th>
            </tr>
        </thead>

         @foreach (var agent in Model.AgentList)
        {
            <tr>
                <td> @Html.ActionLink(@agent.AgentCode, "AgentProfile", new { Id = agent.AgentCode })</td>
                <td>@agent.AgentName</td>
                <td>@agent.WorkingArea</td>
                <td>@agent.PhoneNo</td>
                <td>@agent.Commission</td>
            </tr>
        }
    </table>


</div>

