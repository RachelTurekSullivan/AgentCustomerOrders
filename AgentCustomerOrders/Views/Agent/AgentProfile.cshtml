@{
    ViewData["Title"] = "Agent Details";
}

@model AgentCustomerOrders.Models.AgentDetails

<div>
    <h1 class="display-4">Agent @Model.agent.AgentCode Profile</h1>

    


    <div class="card" style="width: 30rem;">
        <img src="/agent.png" class="card-img-top" alt="..." max-width="150">
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>Agent Code:</th>
                    <td>@Model.agent.AgentCode </td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td>@Model.agent.AgentName</td>
                </tr>
                <tr>
                    <th>Working Area:</th>
                    <td> @Model.agent.WorkingArea</td>
                </tr>
                <tr>
                    <th>Commission: </th>
                    <td>@Model.agent.Commission</td>
                </tr>
                <tr>
                    <th>Phone Number:</th>
                    <td>@Model.agent.PhoneNo</td>
                </tr>
            </table>
            @*<a href="/Agent/editAgent" class="btn btn-block btn-outline-info">
                Edit Agent
            </a>
            @Html.ActionLink(@Model.agent.AgentCode, "EditAgent", new { Id = @Model.agent.AgentCode })*@
        </div>
     
    </div>

</div>

