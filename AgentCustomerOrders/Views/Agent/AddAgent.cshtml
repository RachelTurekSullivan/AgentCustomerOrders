@{
    ViewData["Title"] = "Add Agent";
}
@{
    
    <div class=" = row">
        <div class="col">
            <div class="card" style="width: 30rem;">
                <img src="/agent.png" class="card-img-top" alt="..." max-width="150">
            </div>
        </div>
        <div class="col">
            
            <div class="card" style="width: 30rem;">
                <h1 class="card-header">Add Agent</h1>
                <form method="post" action="addAgent">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <input name="AgentName" placeholder="Enter new agent name..." />
                        </li>
                        <li class="list-group-item">
                            <input name="WorkingArea" placeholder="Enter working area..." />
                        </li>
                        <li class="list-group-item">
                            <input name="Commission" placeholder="Enter commission amount..." />
                        </li>
                        <li class="list-group-item">
                            <input name="PhoneNo" placeholder="Enter phone number..." />
                        </li>
                        <li class="list-group-item">
                            <button class="btn btn-info" type="submit">Save</button>
                        </li>

                    </ul>
                </form>
            </div>
        </div>
    </div>
    }

           
                
